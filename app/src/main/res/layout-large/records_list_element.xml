<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/record_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/record_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Среда"
                android:textSize="@dimen/record_important_size" />

            <TextView
                android:id="@+id/record_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16.02.16"
                android:textSize="@dimen/record_size" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.00-21.20"
                android:textSize="@dimen/record_size" />

            <TextView
                android:id="@+id/record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лекция"
                android:textSize="@dimen/record_size" />

            <TextView
                android:id="@+id/record_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Аудитория №102"
                android:textSize="@dimen/record_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/record_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Объектно-ориентированное программирование (Java, Oracle JDeveloper)"
                android:textSize="@dimen/record_important_size" />

            <TextView
                android:id="@+id/record_lecturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Булатов Алексей Витальевич"
                android:textSize="@dimen/record_size" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>